<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <title>Admin Dashboard - WinKey Gaming</title>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Additional CSS Files -->
  <link rel="stylesheet" href="/assets/css/fontawesome.css">
  <link rel="stylesheet" href="/assets/css/winkey.css">
  <link rel="stylesheet" href="/assets/css/owl.css">
  <link rel="stylesheet" href="/assets/css/animate.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
  
  <style>
    .admin-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 30px;
      background-color: #fff;
      border-radius: 15px;
      box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }
    
    .admin-sidebar {
      min-height: 500px;
      border-right: 1px solid #eee;
    }
    
    .admin-sidebar .nav-link {
      color: #333;
      padding: 12px 15px;
      border-radius: 10px;
      transition: all 0.3s;
    }
    
    .admin-sidebar .nav-link:hover {
      background-color: #f5f5f5;
    }
    
    .admin-sidebar .nav-link.active {
      background-color: #0071f8;
      color: white;
    }
    
    .admin-sidebar .nav-link i {
      margin-right: 10px;
    }
    
    .admin-content {
      padding: 20px;
    }
    
    .dashboard-card {
      background-color: #fff;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.05);
      transition: all 0.3s;
    }
    
    .dashboard-card:hover {
      transform: translateY(-5px);
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .dashboard-card .card-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 15px;
      color: #333;
    }
    
    .dashboard-card .card-value {
      font-size: 32px;
      font-weight: 700;
      color: #0071f8;
    }
    
    .dashboard-card .card-icon {
      font-size: 42px;
      color: #0071f8;
      opacity: 0.1;
      position: absolute;
      right: 20px;
      top: 20px;
    }
    
    .dashboard-card.users {
      border-top: 3px solid #0071f8;
    }
    
    .dashboard-card.products {
      border-top: 3px solid #4CAF50;
    }
    
    .dashboard-card.products .card-value {
      color: #4CAF50;
    }
    
    .dashboard-card.products .card-icon {
      color: #4CAF50;
    }
    
    .dashboard-card.sales {
      border-top: 3px solid #FF9800;
    }
    
    .dashboard-card.sales .card-value {
      color: #FF9800;
    }
    
    .dashboard-card.sales .card-icon {
      color: #FF9800;
    }
    
    .dropdown-menu.show {
      display: block !important;
    }
    
    .dropdown-menu {
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 1000;
      display: none;
      float: left;
      min-width: 10rem;
      padding: .5rem 0;
      margin: .125rem 0 0;
      font-size: 1rem;
      color: #212529;
      text-align: left;
      list-style: none;
      background-color: #fff;
      background-clip: padding-box;
      border: 1px solid rgba(0,0,0,.15);
      border-radius: .25rem;
    }
    
    .dropdown-item {
      display: block;
      width: 100%;
      padding: .25rem 1.5rem;
      clear: both;
      font-weight: 400;
      color: #212529;
      text-align: inherit;
      white-space: nowrap;
      background-color: transparent;
      border: 0;
    }
    
    .dropdown-item:hover, .dropdown-item:focus {
      color: #16181b;
      text-decoration: none;
      background-color: #f8f9fa;
    }
  </style>
</head>

<body>

  <%- include('../partials/header') %>

  <div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h3>Admin Dashboard</h3>
          <span class="breadcrumb"><a href="/">Home</a> > Admin</span>
        </div>
      </div>
    </div>
  </div>

  <div class="container" style="margin-top: 60px; margin-bottom: 60px;">
    <div class="admin-container">
      <div class="row">
        <div class="col-lg-3 admin-sidebar">
          <div class="nav flex-column nav-pills">
            <a class="nav-link active" href="/admin">
              <i class="fa fa-dashboard"></i> Dashboard
            </a>
            <a class="nav-link" href="/admin/products">
              <i class="fa fa-gamepad"></i> Products
            </a>
            <a class="nav-link" href="/admin/users">
              <i class="fa fa-users"></i> Users
            </a>
            <a class="nav-link" href="/admin/purchases">
              <i class="fa fa-shopping-cart"></i> Purchases
            </a>
          </div>
        </div>
        <div class="col-lg-9 admin-content">
          <h4 class="mb-4">Welcome to Admin Panel</h4>
          
          <div class="row">
            <div class="col-md-4">
              <div class="dashboard-card users position-relative">
                <div class="card-title">Total Users</div>
                <div class="card-value"><%= typeof userCount !== 'undefined' ? userCount : 0 %></div>
                <div class="card-icon">
                  <i class="fa fa-users"></i>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="dashboard-card products position-relative">
                <div class="card-title">Total Products</div>
                <div class="card-value"><%= typeof productCount !== 'undefined' ? productCount : 0 %></div>
                <div class="card-icon">
                  <i class="fa fa-gamepad"></i>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="dashboard-card sales position-relative">
                <div class="card-title">Total Purchases</div>
                <div class="card-value"><%= typeof purchaseCount !== 'undefined' ? purchaseCount : 0 %></div>
                <div class="card-icon">
                  <i class="fa fa-shopping-cart"></i>
                </div>
              </div>
            </div>
          </div>
          
          <div class="alert alert-info mt-4">
            <h5>Quick Actions</h5>
            <div class="row mt-3">
              <div class="col-sm-6 col-md-4 mb-2">
                <a href="/admin/products" class="btn btn-primary btn-block">
                  <i class="fa fa-plus"></i> Add New Product
                </a>
              </div>
              <div class="col-sm-6 col-md-4 mb-2">
                <a href="/admin/users" class="btn btn-info btn-block">
                  <i class="fa fa-user"></i> Manage Users
                </a>
              </div>
              <div class="col-sm-6 col-md-4 mb-2">
                <a href="/admin/purchases" class="btn btn-success btn-block">
                  <i class="fa fa-list"></i> View Purchases
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %> 

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
  <script src="/assets/js/isotope.min.js"></script>
  <script src="/assets/js/owl-carousel.js"></script>
  <script src="/assets/js/counter.js"></script>
  <script src="/assets/js/custom.js"></script>
  
  <!-- Update dashboard stats -->
  <script>
    $(document).ready(function() {
      // Собственная функция для управления dropdown
      function setupDropdown() {
        var dropdownToggle = document.querySelector('#userDropdown');
        var dropdownMenu = document.querySelector('.dropdown-menu');
        
        if (dropdownToggle && dropdownMenu) {
          // Обработчик клика на кнопку дропдауна
          dropdownToggle.addEventListener('click', function(event) {
            event.preventDefault(); // Предотвращаем действие по умолчанию для ссылки
            event.stopPropagation();
            if (dropdownMenu.classList.contains('show')) {
              dropdownMenu.classList.remove('show');
            } else {
              dropdownMenu.classList.add('show');
            }
          });
          
          // Закрываем меню при клике вне него
          document.addEventListener('click', function(event) {
            if (!dropdownToggle.contains(event.target) && !dropdownMenu.contains(event.target)) {
              dropdownMenu.classList.remove('show');
            }
          });

          // Добавляем стили для видимости меню
          dropdownMenu.style.display = 'none'; // Start hidden
          // Bootstrap's .show class will handle visibility
        }
      }
      
      // Инициализация дропдауна
      setupDropdown();

      // Fetch dashboard stats - REMOVED as data is passed from server
      // fetch('/api/admin/stats')
      //   .then(response => response.json())
      //   .then(data => {
      //     $('.dashboard-card.users .card-value').text(data.userCount || 0);
      //     $('.dashboard-card.products .card-value').text(data.productCount || 0);
      //     $('.dashboard-card.sales .card-value').text('$' + (data.totalSales || 0));
      //   })
      //   .catch(err => {
      //     console.error('Error fetching stats:', err);
      //   });
    });
  </script>
</body>
</html> 